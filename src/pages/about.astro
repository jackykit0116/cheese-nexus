---
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import Providers from '../components/Providers.jsx';
import { SITE_TITLE, SITE_DESCRIPTION } from '../consts';
import { AboutDynamic } from '../components/AboutDynamic';
import avatar from '../assets/cheese-avatar.jpg';
---

<!doctype html>
<html lang="zh-TW">
	<head>
		<BaseHead title={`About | ${SITE_TITLE}`} description={SITE_DESCRIPTION} />
		<style>
			html {
				scroll-behavior: smooth;
			}
			body {
				margin: 0;
				padding: 0;
				font-family: ui-monospace, monospace;
				-webkit-font-smoothing: antialiased;
				-moz-osx-font-smoothing: grayscale;
			}
		</style>
	</head>
	<body>
		<Providers client:load>
			<Header />
			<AboutDynamic avatar={avatar.src} client:load />
			<Footer />
		</Providers>
	</body>
</html>
