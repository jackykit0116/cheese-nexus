---
import type { GetStaticPaths } from 'astro';
import { Image } from 'astro:assets';
import { getCollection } from 'astro:content';
import BaseHead from '../../components/BaseHead.astro';
import Footer from '../../components/Footer.astro';
import FormattedDate from '../../components/FormattedDate.astro';
import Header from '../../components/Header.astro';
import { SITE_DESCRIPTION, SITE_TITLE } from '../../consts';

export const getStaticPaths = (async ({ paginate }) => {
	const posts = (await getCollection('blog')).sort(
		(a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf(),
	);
	return paginate(posts, { pageSize: 6 });
}) satisfies GetStaticPaths;

const { page } = Astro.props;
const posts = page.data;

const categories = ['All', 'Cheese Evolution', 'JK Research', 'System Log'];
---

<!doctype html>
<html lang="en">
	<head>
		<BaseHead title={`${SITE_TITLE} - Blog (Page ${page.currentPage})`} description={SITE_DESCRIPTION} />
		<style>
			main {
				width: 100%;
				max-width: 960px;
				margin: 0 auto;
				padding: 2rem 1rem;
				overflow-x: hidden;
				box-sizing: border-box;
			}
			.category-nav {
				display: flex;
				gap: 1rem;
				margin-bottom: 2rem;
				flex-wrap: wrap;
				justify-content: center;
			}
			.category-btn {
				padding: 0.5rem 1rem;
				border-radius: 20px;
				background: rgba(255, 255, 255, 0.05);
				border: 1px solid rgba(255, 255, 255, 0.1);
				color: #9ca3af;
				cursor: pointer;
				font-family: ui-monospace, monospace;
				font-size: 0.9rem;
				transition: all 0.3s ease;
			}
			.category-btn:hover, .category-btn.active {
				background: #00f2ff;
				color: black;
				border-color: #00f2ff;
				box-shadow: 0 0 15px rgba(0, 242, 255, 0.4);
			}
			ul {
				display: flex;
				flex-wrap: wrap;
				gap: 2rem;
				list-style-type: none;
				margin: 0;
				padding: 0;
				width: 100%;
				box-sizing: border-box;
			}
			ul li {
				width: calc(50% - 1rem);
				box-sizing: border-box;
				display: block;
			}
			ul li a {
				display: block;
				text-decoration: none;
				transition: 0.2s ease;
			}
			.image-container {
				width: 100%;
				aspect-ratio: 16 / 9;
				margin-bottom: 0.5rem;
				border-radius: 12px;
				border: 1px solid rgba(255, 255, 255, 0.1);
				overflow: hidden;
				position: relative;
			}
			ul li img {
				width: 100%;
				height: 100%;
				object-fit: cover;
				transition: transform 0.3s ease;
			}
			.placeholder-gradient {
				width: 100%;
				height: 100%;
				background: linear-gradient(135deg, #1a1a1a 0%, #333 100%);
				display: flex;
				align-items: center;
				justify-content: center;
				position: relative;
				overflow: hidden;
			}
			.placeholder-gradient::after {
				content: "üêØ";
				font-size: 3rem;
				opacity: 0.2;
				filter: grayscale(1);
			}
			
			/* Category specific gradients for placeholders */
			.placeholder-jk-research { background: linear-gradient(135deg, #001a1a 0%, #004d4d 100%); }
			.placeholder-cheese-evolution { background: linear-gradient(135deg, #1a0f00 0%, #4d2d00 100%); }
			.placeholder-system-log { background: linear-gradient(135deg, #1a1a1a 0%, #333 100%); }

			.title {
				margin: 0;
				color: white;
				line-height: 1.2;
				font-size: 1.5rem;
			}
			.date {
				margin: 0.5rem 0 0;
				color: #6b7280;
				font-family: ui-monospace, monospace;
			}
			.post-category {
				display: inline-block;
				padding: 0.2rem 0.6rem;
				border-radius: 4px;
				font-size: 0.7rem;
				font-weight: bold;
				margin-top: 0.5rem;
				text-transform: uppercase;
			}
			.cat-jk-research { background: rgba(0, 242, 255, 0.1); color: #00f2ff; border: 1px solid #00f2ff; }
			.cat-cheese-evolution { background: rgba(255, 100, 0, 0.15); color: #ff8c00; border: 1px solid #ff8c00; }
			.cat-system-log { background: rgba(255, 255, 255, 0.1); color: #9ca3af; border: 1px solid rgba(255,255,255,0.3); }

			ul li a:hover .title {
				color: #00f2ff;
			}
			ul li a:hover img {
				transform: scale(1.05);
			}
			ul li a:hover .image-container {
				border-color: #ff00ea;
				box-shadow: 0 0 20px rgba(255, 0, 234, 0.3);
			}

			.pagination {
				display: flex;
				justify-content: center;
				align-items: center;
				gap: 1rem;
				margin-top: 3rem;
				font-family: ui-monospace, monospace;
			}
			.pagination a {
				padding: 0.5rem 1rem;
				border-radius: 8px;
				background: rgba(255, 255, 255, 0.05);
				border: 1px solid rgba(255, 255, 255, 0.1);
				color: white;
				text-decoration: none;
				transition: all 0.2s;
			}
			.pagination a:hover {
				background: #00f2ff;
				color: black;
				border-color: #00f2ff;
			}
			.pagination .disabled {
				opacity: 0.3;
				pointer-events: none;
			}
			.page-info {
				color: #9ca3af;
			}

			@media (max-width: 720px) {
				ul li {
					width: 100%;
				}
			}
		</style>
	</head>
	<body>
		<Header />
		<main>
			<div class="category-nav">
				{categories.map(cat => (
					<button class={`category-btn ${cat === 'All' ? 'active' : ''}`} data-category={cat}>{cat}</button>
				))}
			</div>
			<section>
				<ul id="post-list">
					{
						posts.map((post) => {
							// Debug: log category to see what we're getting
							// console.log('Post:', post.id, 'Category:', post.data.category);
							const category = post.data.category ?? 'JK Research';
							const categoryClass = `cat-${category.toLowerCase().replace(/\s+/g, '-')}`;
							const placeholderClass = `placeholder-${category.toLowerCase().replace(/\s+/g, '-')}`;
							return (
								<li data-category={category}>
									<a href={`/blog/${post.id}/`}>
										<div class="image-container">
											{post.data.heroImage ? (
												<Image width={720} height={360} src={post.data.heroImage as any} alt="" />
											) : (
												<div class={`placeholder-gradient ${placeholderClass}`}></div>
											)}
										</div>
										<h4 class="title">{post.data.title}</h4>
										<div class={`post-category ${categoryClass}`}>
											{category}
										</div>
										<p class="date">
											<FormattedDate date={post.data.pubDate} />
										</p>
									</a>
								</li>
							);
						})
					}
				</ul>
			</section>

			<nav class="pagination">
				<a href={page.url.prev} class={!page.url.prev ? 'disabled' : ''}>&larr; Previous</a>
				<span class="page-info">Page {page.currentPage} of {page.lastPage}</span>
				<a href={page.url.next} class={!page.url.next ? 'disabled' : ''}>Next &rarr;</a>
			</nav>
		</main>
		<script>
			// Client-side filtering only works for the current page
			const buttons = document.querySelectorAll('.category-btn');
			const posts = document.querySelectorAll('#post-list li');

			buttons.forEach(btn => {
				btn.addEventListener('click', () => {
					const category = btn.getAttribute('data-category');
					if (!category) return;
					
					// Update buttons
					buttons.forEach(b => b.classList.remove('active'));
					btn.classList.add('active');

					// Filter posts
					posts.forEach(post => {
						const postCat = post.getAttribute('data-category');
						if (category === 'All' || postCat === category) {
							(post as HTMLElement).style.display = 'block';
						} else {
							(post as HTMLElement).style.display = 'none';
						}
					});
				});
			});
		</script>
		<Footer />
	</body>
</html>
