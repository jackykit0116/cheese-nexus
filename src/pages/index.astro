---
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import Providers from '../components/Providers.jsx';
import Hero from '../components/Hero.jsx';
import NeuralSync from '../components/NeuralSync.jsx';
import PredictiveIntentDashboard from '../components/PredictiveIntentDashboard.jsx';
import { SITE_TITLE, SITE_DESCRIPTION } from '../consts';

const siteUrl = Astro.site?.toString() ?? 'https://cheeseai.jackykit.com';
const websiteSchema = {
	'@context': 'https://schema.org',
	'@type': 'WebSite',
	name: SITE_TITLE,
	description: SITE_DESCRIPTION,
	url: siteUrl,
	publisher: { '@type': 'Organization', name: SITE_TITLE },
};
---

<!doctype html>
<html lang="zh-TW">
	<head>
		<BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
		<script type="application/ld+json" set:html={JSON.stringify(websiteSchema)} />
	</head>
	<body>
		<Providers client:load>
			<NeuralSync client:load />
			<PredictiveIntentDashboard client:load />
			<Header />
			<main>
				<Hero client:load />
			</main>
			<Footer />
		</Providers>
	</body>
</html>
