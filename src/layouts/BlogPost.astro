---
import { Image } from 'astro:assets';
import type { CollectionEntry } from 'astro:content';
import BaseHead from '../components/BaseHead.astro';
import Footer from '../components/Footer.astro';
import FormattedDate from '../components/FormattedDate.astro';
import Header from '../components/Header.astro';
import { SITE_TITLE } from '../consts';

type Props = CollectionEntry<'blog'>['data'];

const { title, description, pubDate, updatedDate, heroImage, category } = Astro.props;
const canonicalURL = new URL(Astro.url.pathname, Astro.site).toString();
const publishedISO = pubDate.toISOString();
const modifiedISO = updatedDate?.toISOString() ?? publishedISO;
const articleSchema = {
	'@context': 'https://schema.org',
	'@type': 'Article',
	headline: title,
	description,
	datePublished: publishedISO,
	dateModified: modifiedISO,
	author: { '@type': 'Organization', name: SITE_TITLE },
	publisher: { '@type': 'Organization', name: SITE_TITLE },
	mainEntityOfPage: { '@type': 'WebPage', '@id': canonicalURL },
};
---

<html lang="en">
	<head>
		<BaseHead
			title={title}
			description={description}
			image={heroImage}
			article={{ publishedTime: publishedISO, modifiedTime: updatedDate?.toISOString() }}
		/>
		<script type="application/ld+json" set:html={JSON.stringify(articleSchema)} />
		<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/katex@0.16.9/dist/katex.min.css" integrity="sha384-wcIxkf4k558NjKDWat0H9UGHRHNsJoNs5IUr3pO/VsfOuot8jnhuBMLzDHmWGnEN" crossorigin="anonymous" />
		<style>
			main {
				width: 100%;
				max-width: 100%;
				margin: 0;
			}
			.hero-image {
				width: 100%;
			}
			.hero-image img {
				display: block;
				margin: 0 auto;
				border-radius: 12px;
				border: 1px solid rgba(255, 255, 255, 0.1);
			}
			.prose {
				width: 800px;
				max-width: calc(100% - 2em);
				margin: auto;
				padding: 2em 1em;
				color: #d1d5db;
				line-height: 1.8;
			}
			/* Content hierarchy: first-level heading (article body h1) */
			.prose :global(h1) {
				font-size: 1.75rem;
				font-weight: 700;
				color: rgba(255, 255, 255, 0.95);
				margin: 0 0 1rem 0;
				padding-bottom: 0.75rem;
				border-bottom: 1px solid rgba(255, 255, 255, 0.12);
			}
			/* Section: major break with left accent */
			.prose :global(h2) {
				font-size: 1.45rem;
				font-weight: 700;
				color: #fff;
				margin: 2.5rem 0 1rem 0;
				padding: 0.6rem 0 0.6rem 1rem;
				border-left: 4px solid rgba(0, 242, 255, 0.6);
				background: rgba(255, 255, 255, 0.03);
				border-radius: 0 6px 6px 0;
				line-height: 1.35;
			}
			.prose :global(h2:first-of-type) {
				margin-top: 1.5rem;
			}
			/* Subsection */
			.prose :global(h3) {
				font-size: 1.15rem;
				font-weight: 600;
				color: rgba(255, 255, 255, 0.9);
				margin: 1.75rem 0 0.6rem 0;
				padding-bottom: 0.35rem;
				border-bottom: 1px solid rgba(255, 255, 255, 0.08);
			}
			.prose :global(h4) {
				font-size: 1.05rem;
				font-weight: 600;
				color: rgba(255, 255, 255, 0.85);
				margin: 1.25rem 0 0.5rem 0;
			}
			/* Paragraph spacing */
			.prose :global(p) {
				margin: 0 0 1rem 0;
			}
			/* Lists: clear indent and spacing */
			.prose :global(ul),
			.prose :global(ol) {
				margin: 0.75rem 0 1.25rem 0;
				padding-left: 1.5rem;
			}
			.prose :global(ul) {
				list-style-type: disc;
			}
			.prose :global(ul ul) {
				list-style-type: circle;
				margin: 0.35rem 0;
				padding-left: 1.25rem;
			}
			.prose :global(ol) {
				list-style-type: decimal;
			}
			.prose :global(li) {
				margin: 0.4rem 0;
				padding-left: 0.25rem;
			}
			.prose :global(li::marker) {
				color: rgba(0, 242, 255, 0.5);
			}
			/* Strong / bold */
			.prose :global(strong) {
				color: rgba(255, 255, 255, 0.95);
				font-weight: 700;
			}
			/* Code: inline */
			.prose :global(code:not(pre code)) {
				font-family: ui-monospace, 'SF Mono', Monaco, monospace;
				font-size: 0.9em;
				background: rgba(255, 255, 255, 0.08);
				color: #7dd3fc;
				padding: 0.15em 0.4em;
				border-radius: 4px;
				border: 1px solid rgba(255, 255, 255, 0.08);
			}
			/* Code block */
			.prose :global(pre) {
				margin: 1.25rem 0;
				padding: 1.25rem 1rem;
				background: rgba(0, 0, 0, 0.35);
				border: 1px solid rgba(255, 255, 255, 0.1);
				border-radius: 8px;
				overflow-x: auto;
			}
			.prose :global(pre code) {
				font-family: ui-monospace, 'SF Mono', Monaco, monospace;
				font-size: 0.875rem;
				line-height: 1.6;
				color: #e5e7eb;
				background: none;
				padding: 0;
				border: none;
			}
			/* In-content hr */
			.title {
				margin-bottom: 2em;
				padding: 1em 0;
				text-align: center;
			}
			.title h1 {
				margin: 0 0 0.5em 0;
				font-size: 3rem;
				color: white;
				font-weight: 900;
			}
			.date {
				margin-bottom: 0.5em;
				color: #6b7280;
				font-family: ui-monospace, monospace;
			}
			.last-updated-on {
				font-style: italic;
			}
			.category-badge {
				display: inline-block;
				padding: 0.3rem 0.8rem;
				border-radius: 20px;
				font-size: 0.75rem;
				font-weight: bold;
				text-transform: uppercase;
				letter-spacing: 0.05em;
				margin-bottom: 1rem;
			}
			.cat-jk-research { 
				background: rgba(0, 242, 255, 0.15); 
				color: #00f2ff; 
				border: 1px solid rgba(0, 242, 255, 0.4); 
			}
			.cat-cheese-evolution { 
				background: rgba(255, 100, 0, 0.15); 
				color: #ff8c00; 
				border: 1px solid rgba(255, 140, 0, 0.4); 
			}
			.cat-system-log { 
				background: rgba(255, 255, 255, 0.1); 
				color: #9ca3af; 
				border: 1px solid rgba(255, 255, 255, 0.2); 
			}
			.prose :global(.katex-display) {
				margin: 1rem 0;
				overflow-x: auto;
				overflow-y: hidden;
			}
			.prose :global(.katex) {
				color: #e5e7eb;
				font-size: 1.1em;
			}
			.prose :global(hr) {
				border: none;
				border-top: 1px solid rgba(255, 255, 255, 0.1);
				margin: 2rem 0;
			}
			@media (max-width: 720px) {
				.title h1 {
					font-size: 2rem;
				}
				.prose {
					padding: 1em 0;
				}
				.prose :global(h2) {
					font-size: 1.25rem;
					padding: 0.5rem 0 0.5rem 0.75rem;
				}
				.prose :global(h3) {
					font-size: 1.05rem;
				}
			}
		</style>
	</head>

	<body>
		<Header />
		<main>
			<article>
				<div class="hero-image">
					{heroImage && <Image width={1020} height={510} src={heroImage} alt="" />}
				</div>
				<div class="prose">
					<div class="title">
						{category && (
							<span class={`category-badge cat-${category.toLowerCase().replace(/\s+/g, '-')}`}>
								{category}
							</span>
						)}
						<div class="date">
							<FormattedDate date={pubDate} />
							{
								updatedDate && (
									<div class="last-updated-on">
										Last updated on <FormattedDate date={updatedDate} />
									</div>
								)
							}
						</div>
						<h1>{title}</h1>
						<hr />
					</div>
					<slot />
				</div>
			</article>
		</main>
		<Footer />
	</body>
</html>
